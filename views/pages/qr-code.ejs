
<%- include('../partials/head'); %>
<head>
    <title>QR Code Generator</title>
</head>
    <div class="container mt-3">
        <h1>QR Code Generator</h1>
        <form action="/getQRCode" method="post">
            <div class="row my-3">
                <div class="col-6">
                    <div class="form-group">
                        <label for="">Your URL</label>
                        <input type="url" class="form-control" name="url" placeholder="http://www.example.com" id=""
                            value="http://" aria-describedby="emailHelpId">
                        <small id="emailHelpId" class="form-text text-muted">Example: http://www.example.com</small>
                    </div>

                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-25"><i class="bi bi-send-fill"></i>
                            Submit</button>
                    </div>
                </div>

                <div class="col-6 d-flex justify-content-center">
                    <% if (qrcodeInfo.showQRCode==true){ %>
                        <!-- do something -->
                        <div class="card mb-5 mt-3" style="width:50%">
                            <p class="card-text text-center mt-2">This is your QR Code</p>
                            <img src="<%= qrcodeInfo.code %>" class="card-img-top" alt="QR-Code Generator"
                                width="30%"></img>
                            <div class="card-body">
                                <p class="card-text text-center">Thank you for generate QR Code with Express EJS.</p>
                                <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                            </div>
                        </div>
                        <% }else { %>
                            <!-- do something -->
                            <p> -- QR Code Waiting for Your URL -- </p>
                            <% } %>
    
                </div>


            </div>
        </form>
    </div>
    <%- include('../partials/footer'); %>